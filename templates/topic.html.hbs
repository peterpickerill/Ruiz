<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{meta.title}}</title>
    <link href="/static/slides.css" , rel="stylesheet" />
    {{#if meta.background}}
      <style>
        body { background-image: url("static/images/{{meta.background}}");
        background-repeat: no-repeat; background-attachment: fixed;
        background-size: cover; }
      </style>
    {{/if}}
  </head>
  <body>
    <main>
      <div class="flex">
        <h1>{{title}}</h1>
        {{#if image}}
        <div class="image-container">
          <img src="{{image}}" alt="" />
        </div>
        {{/if}}
      </div>
    </main>
    <footer>
      <a id="prev" href="{{meta.prev}}"><button
          role="button"
        >Previous</button></a>
      <a id="next" href="{{meta.next}}"><button
          role="button"
          class="next"
        >Next</button></a>
    </footer>
    <script>
      function go_left() { document.getElementById("prev").click(); } 
      function go_right(){ document.getElementById("next").click(); }
      document.addEventListener('keydown', function(event) { 
        if (event.code == 'ArrowLeft') {
            go_left();
        }
        if (event.code == 'ArrowRight') {
            go_right();
        }
      });
    </script>
  </body>
</html>